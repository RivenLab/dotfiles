############################# Multimedia #############################
XF86AudioRaiseVolume
	pamixer --increase 7 --allow-boost --set-limit 153

XF86AudioLowerVolume
	pamixer --decrease 7 --allow-boost --set-limit 153

XF86AudioMute
	pamixer -t

XF86Audio{Prev,Next,Play,Stop}
	playerctl {previous,next,play-pause,stop}

XF86Tools
	clementine

XF86Mail
	chromium

XF86HomePage
	changebrightness up

XF86Explorer
	changebrightness down

XF86Calculator
	calc.sh
	
